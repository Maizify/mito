{
	"compilerOptions": {
		"declaration": true,
		"moduleResolution": "classic",
    "allowJs": true,
    "target": "es6",
		"importsNotUsedAsValues": "remove",
		"isolatedModules": true,
		"esModuleInterop": true,
		// "resolveJsonModule": true,
		"sourceMap": true,
		"strict": false,
    "baseUrl": "./src",
    "rootDir": "./src",
    "outDir": "./dist",
	},
  "include": ["src/**/*"],
	"exclude": ["node_modules/*"],
}